{
  "manifest_version": 1,
  "id": "dwd-local-weather-adapter",
  "name": "Lokales Wetter (DWD)",
  "short_name": "Wetter",
  "version": "0.1.0",
  "description": "Ruft die Wetterdaten einer lokalen DWD-Messstation ab",
  "homepage_url": "https://github.com/holger-dunst/dwd-adapter#readme",
  "license": "Apache-2.0",
  "author": "Holger Dunst",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "strict_min_version": "0.10.0",
      "strict_max_version": "*",
      "primary_type": "adapter"
    }
  },
  "options": {
    "schema": {
      "type": "object",
      "properties": {
        "mosmixStation": {
          "type": "string",
          "title": "Der Name der Messstation"
        },
        "lookAheadHours": {
          "type": "number",
          "title": "Die Vorhersage in Stunden"
        }
      }
    }
  }
}
